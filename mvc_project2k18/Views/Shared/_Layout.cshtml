<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link rel="Stylesheet" href="@Href("~/Content/Site.css")" />
    <style type="text/css">


        .navbar-nav {
            width: 90%;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #ddd;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #3e8e41;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }


    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Αρχική", "Index", "Home")</li>
                    <li class="dropdown">
                        @Html.ActionLink("Συγγραφείς", "Index", "authors")
                        <div class="dropdown-content">
                            <div>@Html.ActionLink("Προβολη", "Index", "authors")</div>
                            <div>@Html.ActionLink("Προσθήκη", "Create", "authors")</div>
                        </div>
                    </li>
                    <li class="dropdown">
                        @Html.ActionLink("Βιβλία", "Index", "titles")
                        <div class="dropdown-content">
                            <div>@Html.ActionLink("Προβολή", "Index", "titles")</div>
                            <div>@Html.ActionLink("Προσθήκη", "Create", "titles")</div>
                        </div>
                    </li>
                    <li class="dropdown">
                        @Html.ActionLink("Εκδότες", "Index", "publishers")
                        <div class="dropdown-content">
                            <div>@Html.ActionLink("Προβολή", "Index", "publishers")</div>
                            <div>@Html.ActionLink("Προσθήκη", "Create", "publishers")</div>
                        </div>
                    </li>
                    <li class="dropdown">
                        @Html.ActionLink("Υπάλληλοι", "Index", "employees")
                        <div class="dropdown-content">
                            <div>@Html.ActionLink("Προβολή", "Index", "employees")</div>
                            <div>@Html.ActionLink("Προσθήκη", "Create", "employees")</div>
                        </div>
                    </li>
                    <li class="dropdown">
                        @Html.ActionLink("Πωλήσεις", "Index", "sales")
                        <div class="dropdown-content">
                            <div>@Html.ActionLink("Προβολή", "Index", "sales")</div>
                            <div>@Html.ActionLink("Προσθήκη", "Create", "sales")</div>
                        </div>
                    </li>
                    <li class="dropdown">
                        @Html.ActionLink("Αναφορές","Index")
                        <div class="dropdown-content">
                            <div>@Html.ActionLink("Συγγραφείς  - Πωλήσεις", "Index", "topSalesInSpecificTimes")</div>
                            <div>@Html.ActionLink("Παραγγελίες - Καταστήματα", "Index", "storeSalesInSpecificTimes")</div>
                        </div>
                    </li>
                    <li style="float:right"><a href="maintenance"><span class="glyphicon glyphicon-user"></span> Sign in</a></li>
                    
                </ul>
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SuperTeam Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
